@using MySeenMobileWebViewLib
@inherits PortableRazor.ViewBase
@using MySeenLib;
@model HomeViewModel

<!DOCTYPE html>
<html>
<head>
    <meta content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <script src="jquery-1.10.2.min.js"></script>
    <script src="jquery.mobile-1.4.0.min.js"></script>
    <script src="jquery.lazyloadxt.js"></script>

    <link href="bootstrap.css" rel="stylesheet" />
    <script src="bootstrap.js"></script>
</head>
    <body>
        <div class="form-inline">
            <div class="form-group">
                <label>@MySeenLib.Resource.SelectTheCategory</label>
                <select name="ComboBox" class="form-control" style="width : 100px">
                    <option value="1" @(Model.Selected == MySeenLib.Resource.Films ? " selected" : " ")>@MySeenLib.Resource.Films</option>
                    <option value="2" @(Model.Selected == MySeenLib.Resource.Serials ? " selected" : " ")>@MySeenLib.Resource.Serials</option>
                </select>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("AddFilm")'"><span class="glyphicon glyphicon-plus"></span>&nbsp;@Resource.AddNew</button>
                <label for="quickSearch">@MySeenLib.Resource.QuickSearch <span class="glyphicon glyphicon-search"></span> :</label>
            </div>
        </div>
        <table class="table table-striped" id="table">
            <thead>
                <tr>
                    <th width="60%">@MySeenLib.Resource.Name</th>
                    <th width="20%">@MySeenLib.Resource.Date</th>
                    <th width="10%">@MySeenLib.Resource.Genre</th>
                    <th width="10%">@MySeenLib.Resource.Rating</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var film in Model.FilmsList)
                {
                    <tr>
                        <td class="align-left">@film.Name</td>
                        <td class="align-center">@film.DateSee10</td>
                        <td class="align-center">@film.GenreText</td>
                        <td class="align-center">@film.RatingText</td>
                    </tr>
                }
            </tbody>
        </table>
</body>
</html>
