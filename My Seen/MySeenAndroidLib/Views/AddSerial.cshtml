@using MySeenMobileWebViewLib
@inherits PortableRazor.ViewBase
@using MySeenLib;
@model SerialAddViewModel

<!DOCTYPE html>
<html>
<head>
    <meta content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="jquery.mobile-1.4.0.min.css" />
    <script src="jquery-1.10.2.min.js"></script>
    <script src="jquery.mobile-1.4.0.min.js"></script>

    <script src="bootstrap.min.js"></script>
    <link href="bootstrap.css" rel="stylesheet" />
</head>
    <body>
        <div class="modal-header">
            <h4 class="modal-title text-center">Add Serial</h4>
        </div>
        <h3 class="text-danger">@Model.Name_Error</h3>
            <div class="modal-body">
                @using (@Html.BeginForm("SaveSerial", "Home", new { Name = @Model.Name, Season = @Model.Season, Series = @Model.Series }, PortableRazor.Web.Mvc.HtmlHelper.FormMethod.Get, new { @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        @Html.Label(@MySeenLib.Resource.Name, "Name", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBox("Name", @Model.Name, new { placeholder = @MySeenLib.Resource.Name, @class = "form-control movie-name" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label(@MySeenLib.Resource.Season, "Season", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBox("Season", @Model.Season, new { placeholder = @MySeenLib.Resource.Season, @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label(@MySeenLib.Resource.Series, "Series", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBox("Series", @Model.Series, new { placeholder = @MySeenLib.Resource.Series, @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label(@MySeenLib.Resource.Genre, "Genre", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            <select id="Genre" name="Genre" class="form-control movie-genre">
                                @foreach (var genre in @MySeenLib.Defaults.Genres.GetAll())
                                {
                                    <option @(Model.Genre == MySeenLib.Defaults.Genres.GetId(genre) ? "selected" : "") value="@MySeenLib.Defaults.Genres.GetId(genre)">@genre</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label(@MySeenLib.Resource.Rating, "Rating", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            <select id="Rating" name="Rating" class="form-control movie-rating">
                                @foreach (var rating in @MySeenLib.Defaults.Ratings.GetAll())
                                {
                                    <option @(Model.Rating == MySeenLib.Defaults.Ratings.GetId(rating) ? "selected" : "") value="@MySeenLib.Defaults.Ratings.GetId(rating)">@rating</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary glyphicon glyphicon-arrow-left glyphicon-nonescaped" onclick="location.href='@Url.Action("ShowFilmList")'">&nbsp;Back</button>
                        <button type="submit" class="btn btn-success glyphicon glyphicon-ok glyphicon-nonescaped" id="submitAddButton">&nbsp;@Resource.Add</button>
                    </div>
                }
            </div>
</body>
</html>
