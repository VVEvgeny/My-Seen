<script language="javascript" type="text/javascript">

    function getPage(data, noReset) {

        //console.log("getPage data=" + data + " noReset=" + noReset);

        if (window.model) window.model.setLoadingData();
        if (window.model && noReset !== true) {
            window.model.resetData();
        }

        if (window.modelLayout) window.modelLayout.reload();

        $.post('/Json/GetPage/', data, function(jsonData) {

            if (jsonData === '@Auth.NoAuth') window.location = '/';

            window.showPage(jsonData);

        }, "json");
    };
</script>