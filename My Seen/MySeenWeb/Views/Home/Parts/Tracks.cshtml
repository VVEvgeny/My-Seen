@using MySeenWeb.Models;

@model HomeViewModelTracks

<br />

@Scripts.Render("~/bundles/gmap3", "~/bundles/myseen.gmap")
@Scripts.Render("~/bundles/datetimepicker")
@Styles.Render("~/Content/datetimepicker.css")

<!-- надо геометрия для расчета расстояний и путей <script type="text/javascript" src="http://maps.google.com/maps/api/js"></script>-->
<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?libraries=geometry&amp;language=@CultureInfoTool.GetCulture()"></script>

<div class="row">
    <div class="panel panel-primary col-md-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Resource.Tracks
                <span class="alert-info small">
                    @Html.DropDownList("Years", Model.YearsList, new { @class = "input-sm", @id = "lstYears", @style = "width: 100px;" })
                </span>
                <span class="pull-right alert-info small">
                    <button class="btn btn-xs btn-info" id="All All"><small><span class="glyphicon glyphicon-share"></span></small></button>
                </span>
            </div>
            <ul class="nav nav-tabs">
                @if (Model.HaveFoot)
                {
                    <li class="active"><a data-toggle="tab" href="#menu1">@Resource.Foot</a></li>
                }
                @if (Model.HaveBike)
                {
                    if (Model.HaveFoot)
                    {
                        <li><a data-toggle="tab" href="#menu2">@Resource.Bike</a></li>
                    }
                    else
                    {
                        <li class="active"><a data-toggle="tab" href="#menu2">@Resource.Bike</a></li>
                    }
                }
                @if (Model.HaveCar)
                {
                    if (Model.HaveFoot || Model.HaveBike)
                    {
                        <li><a data-toggle="tab" href="#menu3">@Resource.Car</a></li>
                    }
                    else
                    {
                        <li class="active"><a data-toggle="tab" href="#menu3">@Resource.Car</a></li>
                    }
                }
            </ul>
            <div class="tab-content page-size-gmap page-scrolable">
                @if (Model.HaveFoot)
                {
                    <div id="menu1" class="list-group tab-pane fade in active">
                        <a href="" class="list-group-item track-id" id="All Foot">
                            <h5 class="list-group-item-heading align-center">@Resource.All<span class="badge pull-right">@Model.CountFoot</span></h5>
                            <h6 class="list-group-item-text align-center">@Resource.Distance :<span class="badge pull-right alert-info small">@Model.DistanceFootText</span></h6>
                            <h6 class="list-group-item-text align-left">
                                @Resource.Actions :
                                <span class="pull-right alert-info small">
                                    <button class="btn btn-xs btn-info" id="All Foot"><small><span class="glyphicon glyphicon-share"></span></small></button>
                                </span>
                            </h6>
                        </a>
                        @foreach (var track in Model.DataFoot)
                        {
                            <a href="" class="list-group-item track-id" id=@track.Id>
                                <h5 class="list-group-item-heading">@track.Name<span class="badge pull-right">@track.DateText</span></h5>
                                <h6 class="list-group-item-text align-center">@Resource.Distance :<span class="badge pull-right alert-info small">@track.DistanceText</span></h6>
                                <h6 class="list-group-item-text align-left">
                                    @Resource.Actions :
                                    <span class="pull-right alert-info small">
                                        <button class="btn btn-xs btn-info" id=@track.Id><small><span class="glyphicon glyphicon-share"></span></small></button>
                                        <button class="btn btn-xs btn-warning" id=@track.Id><small><span class="glyphicon glyphicon-pencil"></span></small></button>
                                        <!--<button class="btn btn-xs btn-warning" id=@track.Id><small><span class="glyphicon glyphicon-trash"></span></small></button>-->
                                    </span>
                                </h6>
                            </a>
                        }
                    </div>
                }
                @if (Model.HaveBike)
                {
                    <div id="menu2" class="list-group tab-pane fade @(Model.HaveFoot)?:in active">
                        <a href="" class="list-group-item track-id" id="All Bike">
                            <h5 class="list-group-item-heading align-center">@Resource.All<span class="badge pull-right">@Model.CountBike</span></h5>
                            <h6 class="list-group-item-text align-center">@Resource.Distance :<span class="badge pull-right alert-info small">@Model.DistanceBikeText</span></h6>
                            <h6 class="list-group-item-text align-left">
                                @Resource.Actions :
                                <span class="pull-right alert-info small">
                                    <button class="btn btn-xs btn-info" id="All Bike"><small><span class="glyphicon glyphicon-share"></span></small></button>
                                </span>
                            </h6>
                        </a>
                        @foreach (var track in Model.DataBike)
                        {
                            <a href="" class="list-group-item track-id" id=@track.Id>
                                <h5 class="list-group-item-heading">@track.Name<span class="badge pull-right">@track.DateText</span></h5>
                                <h6 class="list-group-item-text align-center">@Resource.Distance :<span class="badge pull-right alert-info small">@track.DistanceText</span></h6>
                                <h6 class="list-group-item-text align-left">
                                    @Resource.Actions :
                                    <span class="pull-right alert-info small">
                                        <button class="btn btn-xs btn-info" id=@track.Id><small><span class="glyphicon glyphicon-share"></span></small></button>
                                        <button class="btn btn-xs btn-warning" id=@track.Id><small><span class="glyphicon glyphicon-pencil"></span></small></button>
                                        <!--<button class="btn btn-xs btn-warning" id=@track.Id><small><span class="glyphicon glyphicon-trash"></span></small></button>-->
                                    </span>
                                </h6>
                            </a>
                        }
                    </div>
                }
                @if (Model.HaveCar)
                {
                    <div id="menu3" class="list-group tab-pane fade @(Model.HaveFoot||Model.HaveBike)?:in active">
                        <a href="" class="list-group-item track-id" id="All Car">
                            <h5 class="list-group-item-heading align-center">@Resource.All<span class="badge pull-right">@Model.CountCar</span></h5>
                            <h6 class="list-group-item-text align-center">@Resource.Distance :<span class="badge pull-right alert-info small">@Model.DistanceCarText</span></h6>
                            <h6 class="list-group-item-text align-left">
                                @Resource.Actions :
                                <span class="pull-right alert-info small">
                                    <button class="btn btn-xs btn-info" id="All Car"><small><span class="glyphicon glyphicon-share"></span></small></button>
                                </span>
                            </h6>
                        </a>
                        @foreach (var track in Model.DataCar)
                        {
                            <a href="" class="list-group-item track-id" id=@track.Id>
                                <h5 class="list-group-item-heading">@track.Name<span class="badge pull-right">@track.DateText</span></h5>
                                <h6 class="list-group-item-text align-center">@Resource.Distance :<span class="badge pull-right alert-info small">@track.DistanceText</span></h6>
                                <h6 class="list-group-item-text align-left">
                                    @Resource.Actions :
                                    <span class="pull-right alert-info small">
                                        <button class="btn btn-xs btn-info" id=@track.Id><small><span class="glyphicon glyphicon-share"></span></small></button>
                                        <button class="btn btn-xs btn-warning" id=@track.Id><small><span class="glyphicon glyphicon-pencil"></span></small></button>
                                        <!--<button class="btn btn-xs btn-warning" id=@track.Id><small><span class="glyphicon glyphicon-trash"></span></small></button>-->
                                    </span>
                                </h6>
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="panel panel-primary col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">@Resource.Map</div>
            <div id="my_map" class="gmap page-size-gmap"></div>
        </div>
    </div>
</div>

@Html.Partial("Parts/Parts/TracksModalAddEdit", Model.TypeList)

<div class="modal fade modal-window" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" id="ModalShareWindow">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">@Resource.Share @Resource.Track</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="trackName" class="col-sm-2 control-label">@Resource.Link</label>
                        <div id="loadingtrackLinkModalShare" style="display: none;" align="center">
                            <img src="~/Content/Images/loading_small.gif" />
                        </div>
                        <div id="trackLinkModalShare">
                            <input type="text" class="form-control track-name col-sm-7" id="trackLink" placeholder="@Resource.Link">
                            <button type="button" class="btn btn-info col-sm-3" id="shareTryButton">@Resource.Try&nbsp;<span class="glyphicon glyphicon-arrow-right"></span></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" id="shareGetButton">
                    <span class="glyphicon glyphicon-plus"></span>
                    &nbsp;@Resource.Add @Resource.Share
                </button>
                <button type="button" class="btn btn-danger" id="shareDeleteGetButton">
                    <span class="glyphicon glyphicon-trash"></span>
                    &nbsp;@Resource.Delete @Resource.Share
                </button>
            </div>
        </div>
    </div>
</div>

<script language="javascript" type="text/javascript">
    (function ($) {
        initialGmap('@CultureInfoTool.GetCulture()', '@Model.Markers');
        $(function () {
            var $list = $('.tab-content,.panel-heading');
            var $addButton = $('#addButton');
            var $submitAddButton = $('#submitAddButton');
            var $modal = $('#ModalAddWindow');
            var $modalShare = $('#ModalShareWindow');
            var $modalBody = $modal.find('.modal-body');
            var $saveButton = $('#saveButton');
            var $toEditor = $('#Map-Editor');
            var $buttonToEditor = $('#buttonToEditor');
            $buttonToEditor.show();
            var url = '';
            var data = {};
            var $datetimepicker = $('#datetimepicker');
            $datetimepicker.datetimepicker({
                //viewMode: 'years',
                locale: '@CultureInfoTool.GetCulture()'
            });

            function sendRequest(innerUrl, innerData, noRedirect) {
                $.ajax({
                    type: 'POST',
                    url: innerUrl,
                    data: innerData,
                    dataType: 'json',
                    success: function (response) {
                        if (response.error) {
                            alert(response.error);
                        }
                        else {
                            $modal.modal('hide');
                            $modalShare.modal('hide');
                            if (!noRedirect) window.location.href = window.location.href;
                        }
                    },
                    error: function (err) {
                        alert(err);
                    }
                });

                return false;
            }

            var $select = $('#lstYears');
            $select.on('change', function () {
                var value = $(this).val();

                url = '/Home/ChangeCookiesRoads';
                data = {
                    selected: value
                };

                sendRequest(url, data);

                return false;
            });

            var toEditorTextDefault = '/Home/TrackEditor';
            var toEditorText = toEditorTextDefault;

            $toEditor.off('click');
            $toEditor.on('click', function () {
                window.location.href = toEditorText;
                return false;
            });

            $addButton.off('click');
            $addButton.on('click', function () {
                $datetimepicker.val('@DateTime.Now');
                toEditorText = toEditorTextDefault;
                $modal.modal('show');
                return false;
            });

            $submitAddButton.off('click');
            $submitAddButton.on('click', function () {

                url = '/Home/AddTrack';
                data = {
                    name: $('#trackName').val(),
                    datetime: $('#datetimepicker').val(),
                    type: $('#type').val(),
                    coordinates: $('#trackCoords').val(),
                    distance: CalcDistanceFromTxt($('#trackCoords').val())
                };

                sendRequest(url, data);
                return false;
            });

            $list.off('click', '.btn-info');
            $list.on('click', '.btn-info', function () {
                var $item = $(this);
                var id = $item.attr('id');
                var $loadingtrackLinkBegin = $('#loadingtrackLinkModalShare');
                var $loadingtrackLinkEnd = $('#trackLinkModalShare');
                $loadingtrackLinkBegin.show();
                $loadingtrackLinkEnd.hide();
                var $shareGetButton = $('#shareGetButton');
                var $shareDeleteGetButton = $('#shareDeleteGetButton');
                var $shareTryButton = $('#shareTryButton');
                var $trackLink = $('#trackLink');

                $shareDeleteGetButton.hide();
                $shareTryButton.hide();
                $shareGetButton.hide();
                //console.log('GetTrackShare=' + id);
                $.getJSON('/Home/GetTrackShare/' + id + '/', function (data) {
                    $loadingtrackLinkBegin.hide();
                    $loadingtrackLinkEnd.show();
                    $shareGetButton.show();
                    //console.log('GetTrackShare data=', data);
                    if (data === '-') return;
                    $shareGetButton.hide();
                    $shareTryButton.show();
                    $shareDeleteGetButton.show();
                    $trackLink.val(data);
                });
                var $modalTitle = $modalShare.find('.modal-title');
                $modalTitle.text('@Resource.Share @Resource.Track');

                $modalShare.modal('show');

                $trackLink.val('');

                $shareGetButton.off('click');
                $shareGetButton.on('click', function () {
                    //console.log("shareGetButton id=", id);

                    $.getJSON('/Home/GenerateTrackShare/' + id + '/', function (data) {
                        //console.log('GetTrackShare=', data);
                        $shareGetButton.hide();
                        $shareDeleteGetButton.show();
                        $shareTryButton.show();
                        $trackLink.val(data);
                    });

                    return false;
                });

                $shareDeleteGetButton.off('click');
                $shareDeleteGetButton.on('click', function () {
                    //console.log("shareDeleteGetButton id=", id);

                    url = '/Home/DeleteTrackShare/' + id + '/';
                    data = { id: id };

                    sendRequest(url, data, true);

                    return false;
                });

                $shareTryButton.off('click');
                $shareTryButton.on('click', function () {
                    //console.log("$shareTryButton id=", id);

                    window.open($trackLink.val(), '_blank');

                    $modalShare.modal('hide');
                    return false;
                });



                return false;
            });
            $list.off('click', '.btn-warning');
            $list.on('click', '.btn-warning', function () {
                var $item = $(this);
                var id = $item.attr('id');
                toEditorText = toEditorTextDefault + "/" + id;
                var $trackName = $modalBody.find('.track-name');
                var $modalTitle = $modal.find('.modal-title');
                var $trackType = $modalBody.find('.track-type');
                var $trackCoords = $modalBody.find('.track-coords');
                var defaultModalType = $trackType.find('option:selected').text();
                var $trackDate = $modalBody.find('.track-date');


                var $loadingTrackNameBegin = $('#loadingtrackNameModal');
                var $loadingTrackNameEnd = $('#trackNameModal');

                var $loadingTrackDatesBegin = $('#loadingdatetimepickerModal');
                var $loadingTrackDateEnd = $('#datetimepickerModal');

                var $loadingTrackCoordinatesBegin = $('#loadingtrackCoordsModal');
                var $loadingTrackCoordinatesEnd = $('#trackCoordsModal');


                $loadingTrackNameBegin.show();
                $loadingTrackNameEnd.hide();
                $.getJSON('/Home/GetTrackNameById/' + id + '/', function (name) {
                    $trackName.val(name);

                    $loadingTrackNameBegin.hide();
                    $loadingTrackNameEnd.show();
                });

                $loadingTrackDatesBegin.show();
                $loadingTrackDateEnd.hide();
                $.getJSON('/Home/GetTrackDateById/' + id + '/', function (date) {
                    $trackDate.val(date);

                    $loadingTrackDatesBegin.hide();
                    $loadingTrackDateEnd.show();
                });

                $loadingTrackCoordinatesBegin.show();
                $loadingTrackCoordinatesEnd.hide();
                $.getJSON('/Home/GetTrackCoordinatesById/' + id + '/', function (coordinates) {
                    $trackCoords.val(coordinates);

                    $loadingTrackCoordinatesBegin.hide();
                    $loadingTrackCoordinatesEnd.show();
                });


                var typeinmenu = $item.parent().parent().parent().parent().attr('id');
                //console.log('type=', typeinmenu);
                if (typeinmenu === 'menu2') {
                    $trackType.find('option').filter(function (index) { return index === 2; }).prop('selected', true);
                }
                if (typeinmenu === 'menu3') {
                    $trackType.find('option').filter(function (index) { return index === 1; }).prop('selected', true);
                }

                //console.log("Edit click id=", id);

                var $deleteButton = $('#deleteButton');
                var defaultModalTitle = $modalTitle.text();
                $modalTitle.text('@Resource.Edit @Resource.Track');

                $modal.on('hidden.bs.modal', function () {
                    $modalTitle.text(defaultModalTitle);
                    $trackName.val('');
                    $trackCoords.val('');

                    $trackType.find('option')
                        .filter(function () {
                            return $(this).text() === defaultModalType;
                        })
                        .prop('selected', true);

                    $saveButton.hide();
                    $deleteButton.hide();
                    $submitAddButton.show();

                    return false;
                });

                $submitAddButton.hide();
                $saveButton.show();
                $deleteButton.show();
                $modal.modal('show');

                $deleteButton.off('click');
                $deleteButton.on('click', function () {

                    url = '/Home/DeleteTrack';
                    //console.log('delete track=', id);
                    data = { id: id };
                    //alert('Пока не делал, стремно терять, их сложно делать..');
                    sendRequest(url, data);

                    return false;
                });

                $saveButton.off('click');
                $saveButton.on('click', function () {
                    url = '/Home/EditTrack';
                    data = {
                        id: id,
                        name: $('#trackName').val(),
                        datetime: $('#datetimepicker').val(),
                        type: $('#type').val(),
                        coordinates: $('#trackCoords').val(),
                        distance: CalcDistanceFromTxt($('#trackCoords').val())
                    };

                    sendRequest(url, data);

                    return false;
                });


                return false;
            });


            $list.off('click', '.track-id');
            $list.on('click', '.track-id', function () {
                var $item = $(this);
                var id = $item.attr('id');
                //console.log("track-id id=", id);
                if (id === 'All Foot') {
                    showTrackByType(id, "Foot");
                }
                else if (id === 'All Car') {
                    showTrackByType(id, "Car");
                }
                else if (id === 'All Bike') {
                    showTrackByType(id, "Bike");
                }
                else showTrack(id, true);
                return false;
            });
        });
    })(jQuery);
</script>

