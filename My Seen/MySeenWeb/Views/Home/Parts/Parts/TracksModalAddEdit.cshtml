@model IEnumerable<SelectListItem>

<div class="modal fade modal-window" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" id="ModalAddWindow">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close myseen-modal-close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title-head">
                    <div class="modal-title">
                        @Resource.AddNew @Resource.Track
                    </div>
                    <span class="alert-info small" id="buttonToEditor" style="display: none;">
                        <button class="btn btn-xs btn-info" id="Map-Editor"><small><span class="glyphicon glyphicon-picture"></span></small>&nbsp;@Resource.GoToTheEditor</button>
                    </span>
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="trackName" class="col-sm-2 control-label">@Resource.Name</label>
                        <div id="loadingtrackNameModal" style="display: none;" align="center">
                            <img src="~/Content/Images/loading_small.gif" />
                        </div>
                        <div class="col-sm-10" id="trackNameModal">
                            <input type="text" class="form-control track-name" id="trackName" placeholder="@Resource.Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="datetimepicker" class="col-sm-2 control-label">@Resource.When</label>
                        <div id="loadingdatetimepickerModal" style="display: none;" align="center">
                            <img src="~/Content/Images/loading_small.gif"/>
                        </div>
                        <div class="col-sm-10" id="datetimepickerModal">
                            <input type="text" class="form-control track-date" id="datetimepicker" placeholder="@DateTime.Now"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@Resource.Type</label>
                        <div class="col-sm-10">
                            @Html.DropDownList("type", Model, new {@class = "form-control track-type", @id = "type"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@Resource.Coordinates</label>
                        <div id="loadingtrackCoordsModal" style="display: none;" align="center">
                            <img src="~/Content/Images/loading_small.gif" />
                        </div>
                        <div class="col-sm-10" id="trackCoordsModal">
                            @Html.TextArea("trackCoords", null, 10, 55, new { @class = "form-control track-coords", @placeholder = "Latitude,Longitude;Latitude,Longitude;..." })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="deleteButton" style="display: none;">
                    <span class="glyphicon glyphicon-trash"></span>
                    &nbsp;@Resource.Delete
                </button>
                <button type="button" class="btn btn-success" id="submitAddButton">
                    <span class="glyphicon glyphicon-ok"></span>
                    &nbsp;@Resource.Add
                </button>
                <button type="button" class="btn btn-success" id="saveButton" style="display: none;">
                    <span class="glyphicon glyphicon-ok"></span>
                    &nbsp;@Resource.SaveСhanges
                </button>
            </div>
        </div>
    </div>
</div>
