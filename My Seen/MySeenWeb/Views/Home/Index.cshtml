                                <label for="bookRating" class="col-sm-2 control-label">@Resource.Rating</label>
                                <div class="col-sm-10">
                                    @Html.DropDownList("Rating", Model.ratingList, new { @class = "form-control movie-rating", @id = "bookRating" })
                                </div>
