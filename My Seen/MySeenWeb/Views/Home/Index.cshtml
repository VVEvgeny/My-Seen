                            <div class="form-group">
                                <label for="bookGenre" class="col-sm-2 control-label">@Resource.Genre</label>
                                <div class="col-sm-10">
                                    @Html.DropDownList("Genre", Model.genreList, new { @class = "form-control movie-genre", @id = "bookGenre" })
                                </div>
